<div class="expanded jumbo-investment-project padding no-margin-top margin-bottom">
  <div class="row">
    <div class="small-12 medium-8 column">
      <h1><%= t("spending_proposals.welcome.title") %></h1>
      <h2><%= t("spending_proposals.welcome.description_html") %></h2>
    </div>
  </div>
</div>

<div class="row">

  <div class="small-12 medium-6 column">
    <h2><%= t("spending_proposals.welcome.city") %></h2>
    <p><%= t("spending_proposals.welcome.city_text_html") %></p>
    <%= link_to t("spending_proposals.welcome.city_link"), spending_proposals_path(geozone: nil), class: "button" %>

    <div class="margin-top">
      <h3><%= t("spending_proposals.welcome.unfeasible") %></h3>
      <%= link_to t("spending_proposals.welcome.unfeasible_link"), spending_proposals_path(unfeasible: '1') %>
    </div>
  </div>

  <div class="small-12 medium-6 column">
    <h2><%= t("spending_proposals.welcome.districts") %></h2>
    <p><%= t("spending_proposals.welcome.districts_text_html") %></p>

    <div class="callout warning">
      <p><%= t("spending_proposals.welcome.districts_text_remember_html") %></p>
    </div>

    <div class="row">
      <% @geozones.each_slice(7) do |slice| %>
        <div class="small-12 medium-4 column">
          <% slice.each do |geozone| %>
            <%= link_to geozone.name, proposals_path(search: geozone.name) %><br>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

</div>
