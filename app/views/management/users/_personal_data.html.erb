<h3 style="font-weight:0!important"><%= t("management.users.personal_data") %></h3>
<div class="small-12 medium-12 column">
    <div class="small-12 medium-6 column">
        <%= f.text_field :username,
            label: t("management.username_label"),
            placeholder: t("management.username_label") %>
    </div>
    <div class="small-12 medium-6 column">
        <%= f.text_field :email,
            label: t("management.users.email_optional_label"),
            placeholder: t("management.email_label") %>
    </div>
</div>
<div class="small-12 medium-12 column">
    <div class="small-12 medium-4 column">
        <%= f.text_field :first_name,  value: !f.object.first_name.blank? ? f.object.first_name.encode("Windows-1252").force_encoding("UTF-8") : '',
        label: t("management.users.new.name"),
        placeholder: t("management.users.new.name")%>
    </div>
    <div class="small-12 medium-4 column">
        <%= f.text_field :last_name, value: !f.object.last_name.blank? ? f.object.last_name.encode("Windows-1252").force_encoding("UTF-8") : '',
        label: t("management.users.new.last_name"),
        placeholder: t("management.users.new.last_name")%>
    </div>
    <div class="small-12 medium-4 column">
        <%= f.text_field :last_name_alt, value: !f.object.last_name_alt.blank? ? f.object.last_name_alt.encode("Windows-1252").force_encoding("UTF-8") : '',
        label: t("management.users.new.last_name_alt"),
        placeholder: t("management.users.new.last_name_alt")%>
    </div>
</div>  
<div class="small-12 medium-12 column">
    <div class="small-12 medium-4 column">
        <%= f.text_field :phone_number,
        label: t("management.users.new.phone_number"),
        placeholder: t("management.users.new.phone_number") %>
    </div>
    <div class="small-12 medium-2 column">
        <%= f.select :document_type, options_for_select(@document_types||{}, selected: @user.try(:document_type)),
        label: t("management.users.new.document_type"),
        placeholder: t("management.users.new.document_type"),
            include_blank: :true   %>
    </div>
    <div class="small-12 medium-4 column">
        <%= f.text_field :document_number,
        label: t("management.users.new.document_number"),
        placeholder: t("management.users.new.document_number")  %>
    </div>
    <div class="small-12 medium-2 column">
        <%= f.select :gender, options_for_select(@gender||{}, selected: @user.try(:gender)),
        label: t("management.users.new.gender"),
        placeholder: t("management.users.new.gender"),
            include_blank: :true   %>
    </div>
</div>  
<div class="small-12 medium-6 column">
    <div class="small-12 medium-12 column">
        <div class="date-of-birth">
            <%= f.label t("management.date_of_birth") %>
            <%= f.date_select :date_of_birth,
                            prompt: true,
                            start_year: 1900, end_year: 16.years.ago.year,
                            label: false %>
        </div>
    </div>
</div>