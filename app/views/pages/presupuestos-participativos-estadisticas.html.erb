<div class="expanded spending-proposals results no-margin-top">
  <div class="row">
    <div class="small-12 column padding text-center">
      <%= link_to participatory_budget_path, class: "left back" do %>
        <i class="icon-angle-left"></i>
        <%= t("pages.processes.back") %>
      <% end %>

      <h1 class="title">PRESUPUESTOS PARTICIPATIVOS</h1>
    </div>
  </div>
</div>

<div class="row margin-top">
  <div class="small-12 column">
    <ul class="tabs">
      <li class="tabs-title">
        <%= link_to "Resultados", "/presupuestos-participativos-resultados"%>
      </li>
      <li class="tabs-title is-active">
        <%= link_to "Estadísticas de participación", "/presupuestos-participativos-estadisticas", class: "is-active" %>
      </li>
    </ul>
  </div>
</div>

<div class="survey-results">

  <!-- Participantes -->
  <div class="row">
    <div class="small-12 column">
      <div class="panel purple text-center">
        <p>TOTAL PARTICIPANTES</p>
        <p class="big-number-stat">30.000</p>
      </div>
    </div>
  </div>

  <hr>

  <div class="row" data-equalizer>
    <!-- Resultados generales -->
    <div class="small-12 medium-6 column text-right" data-equalizer-watch>
      <div class="panel light-green">
        <p>TOTAL PROPUESTAS ENVIADAS</p>
        <p class="big-number-stat">6.000</p>
      </div>

      <div class="small-12 column margin-top">
        <p class="chart-legend">
          <span class="label" style="background: #9CC56A"></span>&nbsp;
          <strong>PROPUESTAS EN LA FASE FINAL</strong>: 3.000<br>

          <span class="label" style="background: #E87461"></span>&nbsp;
          <strong>PROPUESTAS INVIABLES</strong>: 1.000<br>
        </p>
      </div>
    </div>

    <div class="medium-4 medium-offset-1 show-for-medium column end text-center" data-equalizer-watch>
      <canvas id="chart-totals" width="300" height="300"></canvas>
    </div>
  </div>

  <div class="clear"></div>
  <hr>

  <div class="row" data-equalizer>

