<% provide :title, "Presupuestos particpativos | Resultados" %>
<% provide :social_media_meta_tags do %>
  <%= render "shared/social_media_meta_tags_participatory_budget" %>
<% end %>

<%= javascript_include_tag "chart", 'data-turbolinks-track' => true %>
<%= javascript_include_tag "participatory-budget-charts", 'data-turbolinks-track' => true %>

<div class="expanded spending-proposals results no-margin-top">
  <div class="row">
    <div class="small-12 column padding text-center">
      <%= link_to participatory_budget_path, class: "left back" do %>
        <i class="icon-angle-left"></i>
        <%= t("pages.processes.back") %>
      <% end %>

      <h1 class="title">PRESUPUESTOS PARTICIPATIVOS</h1>
    </div>
  </div>
</div>

<div class="row margin-top">
  <div class="small-12 column">
    <ul class="tabs">
      <li class="tabs-title is-active">
        <%= link_to "Resultados", "/presupuestos-participativos-resultados", class: "is-active" %>
      </li>
      <li class="tabs-title">
        <%= link_to "Estadísticas de participación", "/presupuestos-participativos-estadisticas" %>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="small-12 column">
    <h2>Toda la ciudad</h2>

    <%= image_tag "sps_results_example.jpg" %>
  </div>
</div>
