<% if @proposal_successfull_exists %>
  <div class="expanded jumbo-proposal-ballots-small no-margin-top">
    <div class="row">
      <div class="small-12 column">
        <div class="banner-text inline-block">
          <h2 class="inline-block"><%= t("proposal_ballots.featured_title") %></h2>&nbsp;
          <p class="inline-block"><%= t("proposal_ballots.info") %></p>
          <%= link_to t("proposal_ballots.button"), proposal_ballots_index_path %>
        </div>
        <%= image_tag ("ballot_tiny.gif"), class: "float-right" %>
      </div>
    </div>
  </div>
<% end %>

<div class="expanded processes no-margin-top <%= css_for_human_rights_phase("accepting") %>">
  <div class="row padding">
    <div class="small-12 column">
      <h1 class="margin-bottom">
        <%= t("pages.processes.index.title") %>
      </h1>
      <span class="label"><%= t("pages.processes.index.featured") %></span>
    </div>

    <div class="row">
      <div class="small-12 column">
        <div id="spain-square" class="small-12 medium-5 column margin-bottom">
          <h2><%= t("pages.processes.index.process_2_title") %></h2>
          <% if feature?("probe.plaza") %>
            <p><%= t("pages.processes.index.process_2_description") %></p>
            <div class="small-12 medium-6">
              <%= link_to t("pages.processes.index.process_2_button_vote"),
                          plaza_path, class: "button expanded" %>
            </div>
          <% else %>
            <p><%= t("pages.processes.index.process_2_description_close") %></p>
            <div class="small-12 medium-6">
              <%= link_to t("pages.processes.index.process_2_button"),
                          page_path("processes_plaza_espana"), class: "button expanded" %>
            </div>
          <% end %>
        </div>

        <% if feature?("human_rights.voting") %>
          <div class="small-12 medium-6 column margin-bottom">
            <h2><%= t("pages.processes.index.process_5_title_voting") %></h2>
            <p><%= t("pages.processes.index.process_5_description_voting_html") %></p>
            <div class="small-12 medium-7">
              <%= link_to t("pages.processes.index.process_5_button_voting"),
                            human_rights_page_path, class: "button expanded" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row margin" data-equalizer>
  <div id="urbanistic-licenses" class="small-12 medium-6 large-4 column">
    <div class="panel category subcategory" data-equalizer-watch>
      <h3><%= t("pages.processes.index.process_8_title") %></h3>
      <p><%= t("pages.processes.index.process_8_description") %></p>
      <%= link_to t("pages.processes.index.process_8_button"), urbanistic_licenses_path, class: "button hollow" %>
    </div>
  </div>

  <div id="town-planning" class="small-12 medium-6 large-4 column">
    <div class="panel category subcategory" data-equalizer-watch>
      <h3><%= t("pages.processes.index.process_7_title") %></h3>
      <p><%= t("pages.processes.index.process_7_description") %></p>
      <%= link_to t("pages.processes.index.process_7_button"), town_planning_path, class: "button hollow" %>
    </div>
  </div>

  <% if feature?("human_rights.accepting") %>
    <div id="human-rights" class="small-12 medium-6 large-4 column">
      <div class="panel category subcategory" data-equalizer-watch>
        <h3><%= t("pages.processes.index.process_5_title") %></h3>
        <p><%= t("pages.processes.index.process_5_description") %></p>
        <%= link_to t("pages.processes.index.process_5_button"), human_rights_page_path, class: "button hollow" %>
      </div>
    </div>
  <% end %>

  <div id="service-letters" class="small-12 medium-6 large-4 column">
    <div class="panel category subcategory" data-equalizer-watch>
      <h3><%= t("pages.processes.index.process_6_title") %></h3>
      <p><%= t("pages.processes.index.process_6_description") %></p>
      <%= link_to t("pages.processes.index.process_6_button"), page_path("processes_services_letters"), class: "button hollow" %>
    </div>
  </div>

  <div id="open-plenary" class="small-12 medium-6 large-4 column">
    <div class="panel category subcategory" data-equalizer-watch>
      <h3><%= t("pages.processes.index.process_3_title") %></h3>
      <p><%= t("pages.processes.index.process_3_description") %></p>
      <%= link_to t("pages.processes.index.process_3_button"), page_path("processes_open_plenary"), class: "button hollow" %>
    </div>
  </div>

  <div id="transparency-law" class="small-12 medium-6 large-4 column end">
    <div class="panel category subcategory" data-equalizer-watch>
      <h3><%= t("pages.processes.index.process_1_title") %></h3>
      <p><%= t("pages.processes.index.process_1_description") %></p>
      <%= link_to t("pages.processes.index.process_1_button"), page_path("processes_ordinance"), class: "button hollow" %>
    </div>
  </div>
</div>
