        <div class="small-12 medium-7 column" style="text-align: justify">
            <%=t("csc.index.description3").html_safe%>
        </div>
    </div>
    <div class="row desc" >
        <div class="small-12 medium-4 column">
            <h2><span class="title_sub"><%=t("csc.index.title4").html_safe%></span></h2>
        </div>
        <div class="small-12 medium-1 column" ></div>
        <div class="small-12 medium-7 column" style="text-align: justify">
            <%=t("csc.index.description4").html_safe%>
        </div>
    </div>
    <div class="row desc" >
        <div class="small-12 medium-4 column" >
            <h2><span class="title_sub"><%=t("csc.index.title5").html_safe%></span></h2>
        </div>
        <div class="small-12 medium-1 column" ></div>
        <div class="small-12 medium-7 column">
            <p><%= t("csc.index.title_link_1")%></p>
