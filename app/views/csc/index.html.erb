<% provide :title do %><%= t("meta_tags.csc.title") %><% end %>
<% provide :meta_description , t("meta_tags.csc.description")  %>
<% provide :meta_keywords, t("meta_tags.csc.keywords") %>
<div id="csc-container">
    <div class="row" >
        <div id="title" class="small-12 column">   
            <h1><%=t("csc.index.title")%></h1>
        </div>
    </div>
    <div class="row" >
         <div id="title" class="small-12 column">   
            <h2><span class="title"><%=t("csc.index.subtitle")%></span></h2>
        </div>
    </div>
    <div class="row">
        <div class="small-12 medium-5 column">
            <%= image_tag("consejo_social/banner_superior.jpg", width: '100%', alt: t("csc.index.title")) %>
        </div>
        <div class="small-12 medium-7 column" style="text-align: justify">
            <%=t("csc.index.description").html_safe%>
        </div>
    </div>
    <div class="row desc">
        <div class="small-12 medium-4 column" >
            <h2><span class="title_sub"><%=t("csc.index.title2").html_safe%></span></h2>
