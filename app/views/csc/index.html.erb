        <div class="small-12 medium-1 column" ></div>
        <div class="small-12 medium-7 column" style="text-align: justify">
            <%=t("csc.index.description2").html_safe%>
            <p><%=link_to t("csc.index.description2_link"), "/organos/consejosocial/miembros" , title: t("csc.index.description2_link"), alt: t("csc.index.description2_link") %></p>
        </div>
    </div>
    <div class="row desc" >
        <div class="small-12 medium-4 column" >
            <h2><span class="title_sub"><%=t("csc.index.title3").html_safe%></span></h2>
