<%= javascript_include_tag "chart", 'data-turbolinks-track' => true %>
<%= javascript_include_tag "survey-charts", 'data-turbolinks-track' => true %>

<div class="expanded jumbo-survey no-margin-top padding">
  <div class="row">
    <div class="small-12 medium-7 column">
      <%= render "shared/back_link" %>
      <h1 class="margin">Remodelación de Plaza España</h1>
    </div>

    <div class="small-12 medium-5 column text-right">
      <%= image_tag "processes_plaza_espana.png", alt: "#decideplazaespaña"%>
    </div>
  </div>
</div>

<div class="expanded survey-timeline-line">
  <div class="row">
    <div class="small-12 medium-2 column">
      <p>
        <strong>Consulta ciudadana</strong><br>
        <span><em>28 de enero</em></span>
      </p>
    </div>

    <div class="small-12 medium-3 column">
      <p>
        <strong>Concurso de proyectos</strong><br>
        <span><em>14 de junio</em></span>
      </p>
    </div>

    <div class="small-12 medium-3 column">
      <p>
        <strong>Valoración de proyectos</strong><br>
        <span><em>28 de octubre</em></span>
      </p>
    </div>
    <div class="small-12 medium-4 column">
      <p>
        <strong>Votación final ciudadana del proyecto ganador</strong><br>
        <span><em>Próximamente</em></span>
      </p>
    </div>
  </div>
</div>

<div class="row margin-top">
  <div class="small-12 column">
    <ul class="tabs">
      <li class="tabs-title <%= 'is-active' if current_page?(plaza_path) %>">
        <%= link_to "Resultados", plaza_path %>
      </li>
      <li class="tabs-title <%= 'is-active' if current_page?(preselection_plaza_path) %>">
        <%= link_to "Preselección", preselection_plaza_path %>
      </li>
      <li class="tabs-title <%= 'is-active' if current_page?(survey_plaza_path) %>">
        <%= link_to "Encuesta", survey_plaza_path %>
      </li>
      <li class="tabs-title <%= 'is-active' if current_page?(remodeling_plaza_path) %>">
        <%= link_to "Información del proceso", remodeling_plaza_path %>
      </li>
    </ul>
  </div>
</div>