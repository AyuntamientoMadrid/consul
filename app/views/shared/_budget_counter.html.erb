<div id="countdown">
  <div class="number">
    <span class="days"></span>
    <div class="counter-text"><%= t("shared.counter.days") %></div>
  </div>
  <div class="number">
    <span class="hours"></span>
    <div class="counter-text"><%= t("shared.counter.hours") %></div>
  </div>
  <div class="number">
    <span class="minutes"></span>
    <div class="counter-text"><%= t("shared.counter.minutes") %></div>
  </div>
  <div class="number">
    <span class="seconds"></span>
    <div class="counter-text"><%= t("shared.counter.seconds") %></div>
  </div>
</div>
