<div class="submenu">
  <% valid_orders.each do |order| %>
    <%= link_to current_path_with_query_params(order: order, page: 1), class: order == @current_order ? 'active' : '' do %>
      <%= content_tag(order == @current_order ? :h2 : :span) do %>
        <%= t("#{i18n_namespace}.orders.#{order}") %>
      <% end %>
    <% end %>
  <% end %>
</div>
