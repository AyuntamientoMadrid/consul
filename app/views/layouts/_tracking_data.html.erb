<% if current_user %>
  <meta name="tracking_data"
        data-track-user-id="<%= current_user.id %>"
        data-track-verification-level="<%= verification_level(current_user) %>"
        data-track-age="<%= age(current_user) %>"
        data-track-gender="<%= gender(current_user) %>"
        data-track-district="<%= current_user.try(:geozone).try(:name) %>"

        data-track-event-category="<%= yield(:track_event_category) %>"
        data-track-event-action="<%= yield(:track_event_action) %>"
        data-track-event-name="<%= yield(:track_event_name) %>"/>
<% end %>