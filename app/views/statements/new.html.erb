<div class="row">
  <div class="small-12 medium-8 column">
    <%= render 'shared/back_link' %>

    <h1><%= t("statements.new.title") %></h1>
    <p><%= t("statements.new.text") %></p>

    <%= form_for [Audit.first, Statement.new] do |f| %>
      <%= f.text_field :title, label: t("statements.new.label_title"), placeholder: t("statements.new.label_title") %>
      <%= f.text_area :body, rows: 4, label: t("statements.new.label_message"), placeholder: t("statements.new.label_message") %>
      <div class="relative">
        <%= label_tag "audit-attachment", t("statements.new.attachment"), class: "button success" %>
        <%= f.file_field(:attachment, id: "audit-attachment", label: false, class: "field-attachment") %>
      </div>
      <div class="small-12 medium-6">
        <input type="submit" value="<%= t('statements.new.attachment') %>" class="button expanded">
      </div>
    <% end %>
  </div>
</div>