<%= form_for [Audit.first, Statement.new] do |f| %>
  <%= f.text_field :title, label: "Título", placeholder: "Título" %>
  <%= f.text_area :body, rows: 4, label: "Mensaje", placeholder: "Mensaje" %>
  <%= f.file_field(:attachment) %>
  <input type="submit" value="Enviar documento" class="button expanded">
<% end %>