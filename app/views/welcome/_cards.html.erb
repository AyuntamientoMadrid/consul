        <%= link_to "https://diario.madrid.es/blog/notas-de-prensa/el-ayuntamiento-lanza-el-concurso-de-periodismo-de-datos-y-el-dataton-ciudad-de-madrid-2017/", title: t("welcome.journalism.link"), target: "_blank", rel: "nofollow" do %>
          <span><%= t("welcome.journalism.label") %></span><br>
          <p class="title"><%= t("welcome.journalism.title") %></p>
        <% end %>
      </figcaption>
    </figure>
    <p><%= t("welcome.journalism.text") %></p>
    <p>
      <%= link_to t("welcome.journalism.link"), "https://diario.madrid.es/blog/notas-de-prensa/el-ayuntamiento-lanza-el-concurso-de-periodismo-de-datos-y-el-dataton-ciudad-de-madrid-2017/", target: "_blank", rel: "nofollow" %>
