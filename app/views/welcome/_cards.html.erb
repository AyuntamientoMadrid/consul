<div class="row margin">
  <div class="small-12 medium-4 medium-offset-2 column margin-bottom">
    <figure class="figure-card">
      <%= link_to custom_budget_stats_path(id: Budget.last.to_param), title: t("welcome.stats.link") do %>
        <%= image_tag "welcome_budgets_videos.jpg", alt: t("welcome.stats.alt") %>
      <% end %>
      <figcaption>
        <%= link_to custom_budget_stats_path(id: Budget.last.to_param), title: t("welcome.stats.link") do %>
          <span><%= t("welcome.stats.label") %></span><br>
          <p class="title"><%= t("welcome.stats.title") %></p>
        <% end %>
      </figcaption>
    </figure>
    <p><%= t("welcome.stats.text") %></p>
    <p>
      <%= link_to t("welcome.stats.link"), custom_budget_stats_path(id: Budget.last.to_param) %>
