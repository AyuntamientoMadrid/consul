<div id="<%= dom_id(topic) %>" class="panel column">

  <div class="small-12 medium-9 column">

    <h3><%= link_to topic.title, vote_community_topic_path(@community, topic) %></h3>

    <p class="topic-info">
      <span class="icon-comments"></span>&nbsp;
      <%= link_to t("community.show.topic.comments", count: topic.comments_count), vote_community_topic_path(@community, topic, anchor: "comments") %>
      <span class="bullet">&nbsp;&bull;&nbsp;</span>
      <%= I18n.l topic.created_at.to_date %>
      <span class="bullet">&nbsp;&bull;&nbsp;</span>
      <%= topic.author.name %>
    </p>
    <div id="<%= dom_id(topic) %>_votes">
      <%= render "topics/votes", topic: topic %>
    </div>
  </div>
</div>
