<div class="admin-sidebar">
  <ul id="officing_menu">

    <li <%= "class=active" if controller_name == "voters" %>>
      <%= link_to new_officing_poll_voter_path(Poll.last) do %>
        <span class="icon-user"></span>
        <%= t("officing.menu.voters") %>
      <% end %>
    </li>

    <li <%= "class=active" if ["polls", "recounts"].include?(controller_name) %>>
      <%= link_to officing_polls_path do %>
        <span class="icon-user"></span>
        <%= t("officing.menu.recounts") %>
      <% end %>
    </li>
  </ul>
</div>
