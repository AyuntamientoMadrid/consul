<%= render partial: "admin/complan/tabs"%>
<%= render partial: "admin/complan/buttons", locals: {path: new_admin_complan_project_path, button_title: t("admin.menu.complan_tabs.new_projects")}%>
<%= render partial: "admin/complan/subnav"%>
<%= render partial: "filters"%>

<div class="small-12 column">
  <% if @projects.any? %>
    <h3><%= page_entries_info @projects %></h3>

    <table class="stack sortable">
      <thead>
        <tr>
          <%@model.get_columns.each do |c|%>
            <th><%= link_to_complan_sorted_by c, @model.human_attribute_name(c) %></th>
          <%end%>
          <th style="width: 18em;"><%= t("admin.actions.actions") %></th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
            <tr id="<%= dom_id(project) %>">
              <%@model.get_columns.each do |c|%>
                <td><%=project.try(c)%></td>
              <%end%>
              <td style="width: 18em;">
                <%= link_to admin_complan_projects_path, class: "button hollow", style: "margin: 0px", title: t('admin.complan.show_audits'), alt: t('admin.complan.show_audits')  do %>
                  <span class="icon-settings"></span>
                <%end%>
                <%= link_to admin_complan_project_path(project,  format: :pdf), class: "button", style: "margin: 0px", title: t('admin.complan.project.pdf_download'), alt: t('admin.complan.project.pdf_download')  do %>
                  <span class="icon-document"></span>
                <%end%>
                <%= link_to admin_complan_project_path(project), class: "button", style: "margin: 0px", title: t('admin.complan.project.show_project'), alt: t('admin.complan.project.show_project')  do %>
                  <span class="icon-eye"></span>
                <%end%>
                <%= link_to edit_admin_complan_project_path(project), class: "button", style: "margin: 0px", title: t('admin.complan.project.update_project'), alt: t('admin.complan.project.update_project')  do %>
                  <span class="icon-edit"></span>
                <%end%>
                <%= link_to  admin_complan_project_path(project),method: :delete,  class: "button hollow alert", style: "margin: 0px", title: t('admin.complan.project.title_delete'), alt: t('admin.complan.project.title_delete'), data: {confirm: t('admin.complan.project.destroy_confirm')}  do %>
                  <span class="icon-deleted"></span>
                <%end%>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @projects %>
  <% else %>
    <div class="callout primary"><%= page_entries_info @projects %></div>
  <% end %>
</div>