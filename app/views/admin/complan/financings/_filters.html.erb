<%=form_tag({controller: "financings",action: "index"}, {method: :get}) do %>
    <div class="small-12 column">
        <fieldset style="border: 1px solid grey;margin: 1em 0;padding: 1em;">
            <legend><%=t("admin.menu.complan_tabs.legend_filter")%></legend>            
            <div class="small-12 medium-6 column">
                <%=label_tag :search_description, t('admin.complan.financing.search_description')%>
                <%= text_field_tag :search_description, params[:search_description] %>
            </div>
            <div class="small-12 medium-3 column">
                <%=label_tag :search_name, t('admin.complan.financing.search_name')%>
                <%= text_field_tag :search_name, params[:search_name] %>
            </div>
             <div class="small-12 medium-3 column">
                <%=label_tag :search_departure, t('admin.complan.financing.search_departure')%>
                <%= text_field_tag :search_departure, params[:search_departure] %>
            </div>
            <div class="small-12 medium-4 column">
                <%=label_tag :search_date_start, t('admin.complan.financing.search_date_start')%>
                <%= date_field_tag :search_date_start, params[:search_date_start] %>
            </div>  
            <div class="small-12 medium-4 column end">
                <%=label_tag :search_date_end, t('admin.complan.financing.search_date_end')%>
                <%= date_field_tag :search_date_end, params[:search_date_end] %>
            </div>
            <div class="float-right clear">
                <%= link_to t("admin.menu.complan_tabs.button_clean"), admin_complan_financings_path, class: "button secondary" %>
                <%= submit_tag t("admin.menu.complan_tabs.button_find"), class: "button" %>
            </div>
        </fieldset>
    </div>
<% end%>