<%=form_tag({controller: "topics",action: "index"}, {method: :get}) do %>
    <div class="small-12 column">
        <fieldset style="border: 1px solid grey;margin: 1em 0;padding: 1em;">
            <legend><%=t("admin.menu.parbudget_tabs.legend_filter")%></legend>
            <div class="small-12 medium-6 column end">
                <%=label_tag :search_topic, t('admin.parbudget.topic.search_topic')%>
                <%= text_field_tag :search_topic, params[:search_topic]  %>
            </div>
            <div class="float-right clear">
                <%= link_to t("admin.menu.parbudget_tabs.button_clean"), admin_parbudget_topics_path, class: "button secondary" %>
                <%= submit_tag t("admin.menu.parbudget_tabs.button_find"), class: "button" %>
            </div>
        </fieldset>
    </div>
<% end%>