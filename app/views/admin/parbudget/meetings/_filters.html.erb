<%=form_tag({controller: "meetings",action: "index"}, {method: :get}) do %>
    <div class="small-12 column">
        <fieldset style="border: 1px solid grey;margin: 1em 0;padding: 1em;">
            <legend><%=t("admin.menu.parbudget_tabs.legend_filter")%></legend>            
            <div class="small-12 medium-4 column">
                <%=label_tag :search_date_start, t('admin.parbudget.meeting.search_date_start')%>
                <%= date_field_tag :search_date_start, params[:search_date_start] %>
            </div>  
            <div class="small-12 medium-4 column end">
                <%=label_tag :search_date_end, t('admin.parbudget.meeting.search_date_end')%>
                <%= date_field_tag :search_date_end, params[:search_date_end] %>
            </div>
            <div class="float-right clear">
                <%= link_to t("admin.menu.parbudget_tabs.button_clean"), admin_parbudget_meetings_path, class: "button secondary" %>
                <%= submit_tag t("admin.menu.parbudget_tabs.button_find"), class: "button" %>
            </div>
        </fieldset>
    </div>
<% end%>