<%= render partial: "admin/parbudget/tabs"%>
<%= render partial: "admin/parbudget/buttons", locals: {path: new_admin_parbudget_meeting_path, button_title: t("admin.menu.parbudget_tabs.new_meetings")}%>
<%= render partial: "subnav"%>
<%= render partial: "filters"%>

<div class="small-12 column">
  <% if @meetings.any? %>
    <h3><%= page_entries_info @meetings %></h3>

    <table class="stack">
      <thead>
        <tr>
          <%@model.get_columns.each do |c|%>
            <th><%= @model.human_attribute_name(c) %></th>
          <%end%>
          <th><%= t("admin.actions.actions") %></th>
        </tr>
      </thead>

      <tbody>
        <% @meetings.each do |meeting| %>
            <tr id="<%= dom_id(meeting) %>">
              <%@model.get_columns.each do |c|%>
                <td><%=meeting.try(c)%></td>
              <%end%>
              <td>
                <%= link_to admin_parbudget_meetings_path, class: "button hollow", title: t('admin.parbudget.show_audits'), alt: t('admin.parbudget.show_audits')  do %>
                  <span class="icon-settings"></span>
                <%end%>
                <%= link_to admin_parbudget_meeting_path(meeting), class: "button", title: t('admin.parbudget.meeting.update_meeting'), alt: t('admin.parbudget.meeting.update_meeting')  do %>
                  <span class="icon-document"></span>
                <%end%>
                <%= link_to admin_parbudget_meeting_path(meeting), class: "button", title: t('admin.parbudget.meeting.update_meeting'), alt: t('admin.parbudget.meeting.update_meeting')  do %>
                  <span class="icon-eye"></span>
                <%end%>
                <%= link_to edit_admin_parbudget_meeting_path(meeting), class: "button", title: t('admin.parbudget.meeting.update_meeting'), alt: t('admin.parbudget.meeting.update_meeting')  do %>
                  <span class="icon-edit"></span>
                <%end%>
                <%= link_to  admin_parbudget_meeting_path(meeting),method: :delete, class: "button hollow alert", title: "Borrar ámbito", alt: "Borrar ámbito", data: {confirm: t('admin.parbudget.meeting.destroy_confirm')}  do %>
                  <span class="icon-deleted"></span>
                <%end%>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @meetings %>
  <% else %>
    <div class="callout primary"><%= page_entries_info @meetings %></div>
  <% end %>
</div>