<%= render partial: "admin/parbudget/tabs"%>
<%= render partial: "admin/parbudget/buttons", locals: {path: new_admin_parbudget_project_path, button_title: t("admin.menu.parbudget_tabs.new_projects")}%>
<%= render partial: "subnav"%>
<%= render partial: "filters"%>

<div class="small-12 column">
  <% if @projects.any? %>
    <h3><%= page_entries_info @projects %></h3>

    <table class="stack">
      <thead>
        <tr>
          <%@model.get_columns.each do |c|%>
            <th><%= @model.human_attribute_name(c) %></th>
          <%end%>
          <th><%= t("admin.actions.actions") %></th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
            <tr id="<%= dom_id(project) %>">
              <%@model.get_columns.each do |c|%>
                <td><%=project.try(c)%></td>
              <%end%>
              <td>
                <%= link_to admin_parbudget_projects_path, class: "button hollow", title: t('admin.parbudget.show_audits'), alt: t('admin.parbudget.show_audits')  do %>
                  <span class="icon-settings"></span>
                <%end%>
                <%= link_to admin_parbudget_project_path(project), class: "button", title: t('admin.parbudget.project.update_project'), alt: t('admin.parbudget.project.update_project')  do %>
                  <span class="icon-document"></span>
                <%end%>
                <%= link_to admin_parbudget_project_path(project), class: "button", title: t('admin.parbudget.project.update_project'), alt: t('admin.parbudget.project.update_project')  do %>
                  <span class="icon-eye"></span>
                <%end%>
                <%= link_to edit_admin_parbudget_project_path(project), class: "button", title: t('admin.parbudget.project.update_project'), alt: t('admin.parbudget.project.update_project')  do %>
                  <span class="icon-edit"></span>
                <%end%>
                <%= link_to  admin_parbudget_project_path(project),method: :delete, class: "button hollow alert", title: "Borrar ámbito", alt: "Borrar ámbito", data: {confirm: t('admin.parbudget.project.destroy_confirm')}  do %>
                  <span class="icon-deleted"></span>
                <%end%>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @projects %>
  <% else %>
    <div class="callout primary"><%= page_entries_info @projects %></div>
  <% end %>
</div>