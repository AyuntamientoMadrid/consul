<%=form_tag do %>
    <div class="small-12 column">
        <fieldset style="border: 1px solid grey;margin: 1em 0;padding: 1em;">
            <legend><%=t("admin.menu.parbudget_tabs.legend_filter")%></legend>
            <div class="small-12 medium-3 column">
                <%=label_tag :search_identificator, t('admin.parbudget.project.search_identificator')%>
                <%= text_field_tag :search_identificator, params[:search_identificator] %>
            </div>  
            <div class="small-12 medium-3 column">
                <%=label_tag :search_title, t('admin.parbudget.project.search_title')%>
                <%= text_field_tag :search_title, params[:search_title] %>
            </div>               
            <div class="small-12 medium-3 column end">
                <%=label_tag :search_year_to, t('admin.parbudget.project.search_year_to')%>
                <%= number_field_tag :search_year_to, params[:search_year_to] %>
            </div>  
            <div class="small-12 medium-3 column end">
                <%=label_tag :search_year_end, t('admin.parbudget.project.search_year_end')%>
                <%= number_field_tag :search_year_end, params[:search_year_end] %>
            </div>
        
            <div class="small-12 medium-4 column">
                <%=label_tag :search_memory, t('admin.parbudget.project.search_memory')%>
                <%= text_field_tag :search_memory, params[:search_memory] %>
            </div>  
            <div class="small-12 medium-4 column end">
                <%=label_tag :search_status, t('admin.parbudget.project.search_status')%>
                    <%= select_tag :search_status, options_for_select(@status || [],  params[:search_status]), include_blank: true %>
            </div>
                <div class="small-12 medium-4 column end">
                <%=label_tag :search_center, t('admin.parbudget.project.search_center')%>
                <%= text_field_tag :search_center, params[:search_center] %>
            </div>
            <div class="float-right clear">
                <%= link_to t("admin.menu.parbudget_tabs.button_clean"), admin_parbudget_projects_path, class: "button secondary" %>
                <%= submit_tag t("admin.menu.parbudget_tabs.button_find"), class: "button" %>
            </div>
        </fieldset>
    </div>
<% end%>


