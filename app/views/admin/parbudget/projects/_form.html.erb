
<%= form_for [:admin, @project], html: {data: {watch_changes: true}} do |f| %>

  <% if @project.errors.any? %>
    <div id="error_explanation" data-alert class="callout alert" data-closable>
      <button class="close-button" aria-label="<%= t("application.close") %>" type="button" data-close>
        <span aria-hidden="true">&times;</span>
      </button>

      <strong>
        <%= @project.errors.count %>
        <%= t("admin.sures.actuations.errors.form.error", count: @project.errors.count) %>
      </strong>
    </div>
  <% end %>

  <%=render "projects_fields", f: f%>
  <%=render "center_fields", f: f%>
  <%=render "author_fields", f: f%>
  <%=render "economic_fields", f: f%>
  <%=render "media_fields", f: f%>
  <%=render "link_fields", f: f%>
  
  <div class="small-12 medium-3 column clear end">
    <%= f.submit(class: "button success expanded", value: t("admin.parbudget.#{admin_submit_action(@project)}.submit_button")) %>
  </div> 

<% end %>