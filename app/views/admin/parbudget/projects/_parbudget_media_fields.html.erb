<div class="nested-fields">
    <%= f.hidden_field :id %>
    <div class="small-12 medium-6  column end"  >
        <%= f.text_field :title %>
    </div>
    <div class="small-12 medium-6  column end"  >
        <%= f.text_field :text_document %>
    </div>
    <div class="small-12 medium-12  column end"  >
        <%= f.file_field :attachment %>
    </div>

    <div class="small-12 medium-12 column action-remove text-right">
        <%=link_to_remove_association  t("admin.parbudget.project.delete_media") , f, class: "button alert"%>
    </div>
</div>