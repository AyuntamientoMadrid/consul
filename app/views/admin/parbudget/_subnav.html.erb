<% @subnav ||=[]%>
<div class="small-12 column">
    <ul class="menu simple clear" >
        <%@subnav.each do |ma|%> 
            <% if params[:subnav].blank? && "all" == ma[:value].to_s %>
             <li class="is-active"><h2><%=ma[:title]%></h2></li>
            <% elsif params[:subnav].to_s == ma[:value].to_s %>
                <li class="is-active"><h2><%=ma[:title]%></h2></li>
            <% else %>
                <li><%= link_to ma[:title],current_path_with_query_params(subnav:  ma[:value].to_s , params: params.except(:subnav)) %></li>
            <% end %> 
        <% end %> 
    </ul>
</div>