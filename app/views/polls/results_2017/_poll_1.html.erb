<h3 id="1">Madrid 100% Sostenible, Billete único para el transporte público y Plaza de España</h3>

<% @poll_1.questions.order(id: :asc).each do |question| %>
  <table>
    <caption>
      <%= question.title %>
    </caption>
    <% answers_votes = {} %>
    <% max_i = 0 %>
    <% question.valid_answers.each_with_index do |answer, i| %>
      <% answers_votes[answer] = total_votes_for_answer(question, answer) %>
      <% max_i = i if answers_votes.values.max == answers_votes[answer] %>
    <% end %>

    <thead>
      <tr>
        <% answers_votes.keys.each_with_index do |answer, i| %>
          <th class="<%= 'win' if max_i == i %>"><%= answer %></th>
        <% end %>
        <th>EN BLANCO</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% answers_votes.values.each_with_index do |votes, i| %>
          <td  class="<%= 'win' if max_i == i %>"><%= votes %></td>
        <% end %>
        <td><%= total_votes_for_poll(@poll_1) - answers_votes.values.sum %></td>
      </tr>
    </tbody>
  </table>
<% end %>