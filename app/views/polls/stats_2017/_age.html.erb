<h3 id="11">Participaci칩n por grupos de edad</h4>

<table class="polls-participation-age margin-top">
  <thead>
    <tr>
      <th class="border-right">EDAD</th>
      <th>WEB</th>
      <th>URNAS</th>
      <th>CORREOS</th>
      <th class="border-left">TOTAL</th>
    </tr>
  </thead>
  <tbody>

    <% ::Poll::AGE_STEPS.each_with_index do |age, i| %>
      <tr>
        <% next_age = ::Poll::AGE_STEPS[i+1] %>

        <td class="border-right">
          <% if next_age.present? %>
            <%= "De #{age} a #{next_age - 1} a침os" %>
          <% else %>
            <%= "De #{age} y m치s a침os" %>
          <% end %>
        </td>

        <% ::Poll::Voter::VALID_ORIGINS.each do |origin| %>
          <td>
            <div class="progress" role="progressbar" tabindex="0"
                 aria-valuenow="<%= @age_stats[:percents][age][origin] %>"
                 aria-valuetext="<%= number_to_percentage(@age_stats[:percents][age][origin]) %>"
                 aria-valuemin="0" aria-valuemax="100">
              <span class="progress-meter <%= origin %>" style="width: <%= @age_stats[:percents][age][origin] %>%">
                <p class="progress-meter-text">
                  <%= @age_stats[:counts][age][origin] %>
                  (<%= number_to_percentage(@age_stats[:percents][age][origin]) %>)
                </p>
              </span>
            </div>
          </td>
        <% end %>

        <td class="border-left">
          <strong>
            <%= @age_stats[:counts][age]['total'] %>
            (<%= number_to_percentage(@age_stats[:percents][age]['total']) %>)
          </strong>
          <div class="progress" role="progressbar" tabindex="0"
               aria-valuenow="<%= @age_stats[:percents][age]['total'] %>"
               aria-valuetext="<%= number_to_percentage(@age_stats[:percents][age]['total']) %>"
               aria-valuemin="0" aria-valuemax="100">
            <span class="progress-meter" style="width: <%= @age_stats[:percents][age]['total'] %>%"></span>
          </div>
        </td>

      </tr>
    <% end %>

  </tbody>
</table>
