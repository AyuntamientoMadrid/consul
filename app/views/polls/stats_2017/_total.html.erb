<h3 id="9">Participación total</h3>

<p class="stat-number margin-top">
  Nº total de votos emitidos<br>
  <span><%= @totals['votos_totales'] %></span>
</p>

<h4>Canales de participación (Votos emitidos)</h4>

<table class="polls-participation">
  <thead>
    <tr>
      <th>WEB</th>
      <th>URNAS</th>
      <th>CORREOS</th>
      <th class="border-left">TOTAL</th>
    </tr>
  </thead>
  <tbody>
    <td><%= @totals['votos_total_web'] %> <small><em>(<%= @totals['votos_total_web'].percent_of(@totals['votos_totales']) rescue 0 %>%)</em></small></td>
    <td><%= @totals['votos_total_booth'] %> <small><em>(<%= @totals['votos_total_booth'].percent_of(@totals['votos_totales']) rescue 0 %>%)</em></small></td>
    <td><%= @totals['votos_total_letter'] %> <small><em>(<%= @totals['votos_total_letter'].percent_of(@totals['votos_totales']) rescue 0 %>%)</em></small></td>
    <td class="border-left"><strong><%= @totals['votos_totales'] %></strong></td>
  </tbody>
</table>

<p class="stat-number margin-top">
  Nº total de participantes<br>
  <span><%= @totals['participantes_totales'] %></span>
</p>

<h4>Canales de participación (Participantes)</h4>

<table class="polls-participation">
  <thead>
    <tr>
      <th>WEB</th>
      <th>URNAS</th>
      <th>CORREOS</th>
      <th class="border-left">TOTAL</th>
    </tr>
  </thead>
  <tbody>
    <td><%= @totals['participantes_total_web'] %> <small><em>(<%= @totals['participantes_total_web'].percent_of(@totals['participantes_totales']) rescue 0 %>%)</em></small></td>
    <td><%= @totals['participantes_total_booth'] %> <small><em>(<%= @totals['participantes_total_booth'].percent_of(@totals['participantes_totales']) rescue 0 %>%)</em></small></td>
    <td><%= @totals['participantes_total_letter'] %> <small><em>(<%= @totals['participantes_total_letter'].percent_of(@totals['participantes_totales']) rescue 0 %>%)</em></small></td>
    <td class="border-left"><strong><%= @totals['participantes_total_web'] + @totals['participantes_total_booth'] + @totals['participantes_total_letter'] %></strong></td>
  </tbody>
</table>