<h3 id="2"><%= stats[:poll].name %></h3>

<p class="stat-number margin-top">
  Nº TOTAL DE VOTOS<br>
  <span><%= stats[:total_votes] %></span>
</p>

<table class="polls-participation margin-top">
  <thead>
    <tr>
      <th class="border-right">&nbsp;</th>
      <th>WEB</th>
      <th>URNAS</th>
      <th>CORREOS</th>
      <th class="border-left">TOTAL</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th class="text-left border-right">Votos válidos</th>
      <td><%= stats[:web_votes] %> <small><em>(62,50%)</em></small></td>
      <td><%= stats[:booth_votes] %> <small><em>(12,50%)</em></small></td>
      <td><%= stats[:letter_votes] %> <small><em>(25,00%)</em></small></td>
      <td class="border-left"><%= stats[:total_valid_votes] %> <small><em>(80,00%)</em></small></td>
    </tr>
    <tr>
      <th class="text-left border-right">Votos en blanco</th>
      <td><%= stats[:white_web_votes] %> <small><em>(33,33%)</em></small></td>
      <td><%= stats[:white_booth_votes] %> <small><em>(6,67%)</em></small></td>
      <td><%= stats[:white_letter_votes] %> <small><em>(60,00%)</em></small></td>
      <td class="border-left"><%= stats[:total_white_votes] %> <small><em>(15,00%)</em></small></td>
    </tr>
    <tr>
      <th class="text-left border-right">Votos nulos</th>
      <td><%= stats[:null_web_votes] %> <small><em>(0,00%)</em></small></td>
      <td><%= stats[:null_web_votes] %> <small><em>(50,00%)</em></small></td>
      <td><%= stats[:null_web_votes] %> <small><em>(50,00%)</em></small></td>
      <td class="border-left"><%= stats[:total_null_votes] %> <small><em>(5,00%)</em></small></td>
    </tr>
    <tr>
      <th class="text-left border-right">TOTAL</th>
      <td><strong><%= stats[:total_web] %></strong></td>
      <td><strong><%= stats[:total_booth] %></strong></td>
      <td><strong><%= stats[:total_letter] %></strong></td>
      <td class="border-left"><strong><%= stats[:total_total] %></strong></td>
    </tr>
  </tbody>
</table>